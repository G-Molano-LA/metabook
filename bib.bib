@article{Nurk2017,
  author = {Nurk, Sergey and Meleshko, Dmitry and Korobeynikov, Anton and Pevzner, Pavel A.}, 
  title = {metaSPAdes: a new versatile metagenomic assembler},
  volume = {27}, 
